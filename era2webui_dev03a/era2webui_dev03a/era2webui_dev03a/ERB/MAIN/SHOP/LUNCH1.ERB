;LOCAL:6 = 固有チョコの種類、乱数処理用
;LOCAL:7 = 内部処理用
;-------------------------------------------------
@LUNCH_CHOCOLATE
VARSET LOCAL, 0
LOCAL = RAND:16

;ABL:技巧をみる
IF ABL:技巧 == 0
	LOCAL:2 = 10
ELSEIF ABL:技巧 == 1
	LOCAL:2 = 15
ELSEIF ABL:技巧 == 2
	LOCAL:2 = 20
ELSEIF ABL:技巧 == 3
	LOCAL:2 = 30
ELSEIF ABL:技巧 == 4
	LOCAL:2 = 40
ELSE
	LOCAL:2 = 50
ENDIF

;ABL:料理技能をみる
IF ABL:料理技能 == 0
	TIMES LOCAL:2 , 1.00
ELSEIF ABL:料理技能 == 1
	TIMES LOCAL:2 , 1.10
ELSEIF ABL:料理技能 == 2
	TIMES LOCAL:2 , 1.30
ELSEIF ABL:料理技能 == 3
	TIMES LOCAL:2 , 1.50
ELSEIF ABL:料理技能 == 4
	TIMES LOCAL:2 , 1.90
ELSE
	TIMES LOCAL:2 , 2.40
ENDIF

;EXP:調理経験をみる
IF EXP:調理経験 < EXPLV:1
	TIMES LOCAL:2 , 0.80
ELSEIF EXP:調理経験 < EXPLV:2
	TIMES LOCAL:2 , 1.00
ELSEIF EXP:調理経験 < EXPLV:3
	TIMES LOCAL:2 , 1.20
ELSEIF EXP:調理経験 < EXPLV:4
	TIMES LOCAL:2 , 1.40
ELSEIF EXP:調理経験 < EXPLV:5
	TIMES LOCAL:2 , 1.70
ELSE
	TIMES LOCAL:2 , 2.00
ENDIF

;献身的
SIF TALENT:献身的
	TIMES LOCAL:2 , 1.30

;相愛
IF TALENT:相愛
	TIMES LOCAL:2 , 1.80
;親愛
ELSEIF TALENT:親愛
	TIMES LOCAL:2 , 1.50
;恋慕
ELSEIF TALENT:恋慕
	TIMES LOCAL:2 , 1.20
ENDIF

;LOCAL = 料理の種類
IF LOCAL == 0 && ABL:料理技能 >= 5
	;キャラ固有チョコ
	LOCAL:4 = 700
ELSEIF LOCAL == 1 || LOCAL == 2
	;ザッハトルテ
	LOCAL:4 = 630
ELSEIF LOCAL == 3 || LOCAL == 4
	;チョコケーキ
	LOCAL:4 = 540
ELSEIF LOCAL == 5 || LOCAL == 6 || LOCAL == 7
	;ジンジャーチョコレート
	LOCAL:4 = 500
ELSEIF LOCAL == 8 || LOCAL == 9
	;チョコバナナ
	LOCAL:4 = 450
ELSEIF LOCAL == 11 && TALENT:母乳体質
	;母乳チョコ
	LOCAL:4 = 550
ELSE
	;プラリネ
	LOCAL:4 = 400
ENDIF

;調理名人
IF TALENT:調理名人
	TIMES LOCAL:4 , 2.00
;料理得意
ELSEIF TALENT:料理得意
	TIMES LOCAL:4 , 1.50
;料理苦手
ELSEIF TALENT:料理苦手
	TIMES LOCAL:4 , 0.75
ENDIF

;映姫様のみ60日ごとに実行するとボーナスが入る。
IF NO:TARGET == 1036 && (DAY % 60) == 0
	LOCAL = 0
	LOCAL:4 = 600
	LOCAL:1 = 1
ENDIF
IF LOCAL == 0 && (ABL:料理技能 >= 5 || LOCAL:1 == 1)
	;毒を盛ったフラグON
	CFLAG:150 |= 64
	;(専用)口上側で定義されている固有チョコが25%の確率で出る
	IF CFLAG:9 & 8 && STRLENS(CSTR:87) > 0 && RAND:4 == 0
		TSTR:5 = %CSTR:87%
		LOCAL:4 += 88
	;キャラ固有チョコ
	;霊夢様
	ELSEIF NO:TARGET == 1001 && CFLAG:0
		TSTR:5 = 針入りおはぎ
		LOCAL:4 = 777
		LOCAL:5 = 2
	;チルノ
	ELSEIF NO:TARGET == 1005
		TSTR:5 = チョコアイス
		LOCAL:4 += 105
	;美鈴
	ELSEIF NO:TARGET == 1006 || NO:TARGET == 4004
		TSTR:5 = 豆板醤チョコ
		LOCAL:4 += 315
	;こぁ
	ELSEIF NO:TARGET == 1007
		TSTR:5 = ココアチョコ
		LOCAL:4 += 90
	;咲夜さん
	ELSEIF NO:TARGET == 1009
		TSTR:5 = ワインチョコ
		LOCAL:4 += 330
	;フラン
	ELSEIF NO:TARGET == 1011
		;恋の味は苦いって言うよね！…え、言わない？
		TSTR:5 = ビターチョコ
		LOCAL:4 += 80
		SIF TALENT:恋慕
			TFLAG:202 = 1
	;アリス
	ELSEIF NO:TARGET == 1014 && CFLAG:0 == 0
		TSTR:5 = マーブルチョコ
		LOCAL:4 += 165
	;メディスン
	ELSEIF NO:TARGET == 1033
		TSTR:5 = 鈴蘭チョコ
		LOCAL:4 += 80
		LOCAL:5 = 3
	;ヤマメ
	ELSEIF NO:TARGET == 1078
		TSTR:5 = ファンガスティックチョコ
		LOCAL:4 += 99
		LOCAL:5 = 3
	;パルスィ
	ELSEIF NO:TARGET == 1079
		TSTR:5 = ブラッドレッドチョコ
		LOCAL:4 += 88
		LOCAL:5 = 2
	;おくう
	ELSEIF NO:TARGET == 1083
		LOCAL:6 = RAND:6
		IF ITEM:媚薬 > 0 && TALENT:淫乱 && LOCAL:6 == 0
			;媚薬1つ消費
			CALL USE_PLURAL_ITEM, 61, 1
			TFLAG:202 = 1
			TSTR:5 = ヌークリア・チョコ
			LOCAL:4 += 50
			LOCAL:5 = 7
		ELSE
			;うにゅ～
			TSTR:5 = いちごチョコレート
			LOCAL:4 += 60
		ENDIF
	;キャラ
;	ELSEIF NO:TARGET == 
;		TSTR:5 = (料理名)
;		LOCAL:4 += 
	ELSE
		TSTR:5 = 貯古齢糖
	ENDIF
	SIF TALENT:親愛 || TALENT:相愛
		TFLAG:202 = 1
ELSEIF LOCAL == 1 || LOCAL == 2
	TSTR:5 = ザッハトルテ
ELSEIF LOCAL == 3 || LOCAL == 4
	TSTR:5 = チョコケーキ
ELSEIF LOCAL == 5 || LOCAL == 6 || LOCAL == 7
	TSTR:5 = ジンジャーチョコレート
ELSEIF LOCAL == 8 || LOCAL == 9
	TSTR:5 = チョコバナナ
ELSEIF LOCAL == 11 && TALENT:母乳体質
	IF ITEM:媚薬 > 0 && TALENT:淫乱 && RAND:4 == 0
		;媚薬1つ消費
		CALL USE_PLURAL_ITEM, 61, 1
		TFLAG:202 = 1
		LOCAL:4 += 80
		TSTR:5 = ほんのりと甘い香りがする母乳チョコ
	ELSE
		TSTR:5 = 母乳チョコ
	ENDIF
ELSE
	IF ITEM:媚薬 > 0 && TALENT:淫乱 && RAND:4 == 0
		;媚薬1つ消費
		CALL USE_PLURAL_ITEM, 61, 1
		TFLAG:202 = 1
		LOCAL:4 += 80
		TSTR:5 = ほんのりと甘い香りがするプラリネ
	ELSE
		TSTR:5 = プラリネ
	ENDIF
ENDIF

PRINTL 
PRINTFORMW %CALLNAME:TARGET%に料理を作らせた
PRINTL 
;嫉妬チョコ作成時の口上・地の文の表示
CALL DISPLAY_KOJO_MESSAGE_SUB_EVENT, TARGET, 420

;-------------------------------------------------
;チョコの値段を計算
;-------------------------------------------------
;普通の弁当よりも補正は大きい
LOCAL:3 = (LOCAL:2 * LOCAL:4) / 25
IF FLAG:3 >= 3
	LOCAL:3 = TABLE_CALC(LOCAL:3, 5000, 2)
	LOCAL:3 = TABLE_CALC(LOCAL:3, 10000, 2)
	LOCAL:3 = TABLE_CALC(LOCAL:3, 50000, 2)
	LOCAL:3 = TABLE_CALC(LOCAL:3, 100000, 2)
ELSE
	LOCAL:3 = TABLE_CALC2(LOCAL:3, 10000, 40)
	LOCAL:3 = TABLE_CALC2(LOCAL:3, 50000, 40)
	LOCAL:3 = TABLE_CALC2(LOCAL:3, 100000, 40)
ENDIF
;恋愛感情(?)補正
SIF TALENT:恋慕
	TIMES LOCAL:3 , 1.20
SIF TALENT:親愛
	TIMES LOCAL:3 , 1.50
SIF TALENT:相愛
	TIMES LOCAL:3 , 1.80
;ヤンデレ補正
SIF TALENT:嫉妬
	TIMES LOCAL:3 , 1.30
SIF TALENT:狂気
	TIMES LOCAL:3 , 1.70

PRINTL 
PRINTL さて……チョコを貰ったのは良かったが…
PRINTFORMW 勇気を出して食べるか、それとも里で{LOCAL:3}圓で売るか……
IF (FLAG:12 & 512) == 0
	PRINTW ……
	PRINTW …………
	PRINTW ………………
ELSE
	PRINTL （どうする？）
	DRAWLINE
	PRINTL [0] - 頑張って食べてみる
	PRINTL [1] - 危険物は処分しよう
	DRAWLINE
	PRINTL 
ENDIF
$INPUT_LOOP
IF (FLAG:12 & 512) == 0
	RESULT = (FLAG:12 & 1024) ? 0 # 1
ELSE
	INPUT
ENDIF
IF RESULT == 0
	;嫉妬チョコを食べてもらえたフラグON
	CFLAG:150 |= 128
	CFLAG:MASTER:150 |= 512
	;作成した嫉妬チョコを主人に食べて貰った時の口上・地の文の表示
	CALL DISPLAY_KOJO_MESSAGE_SUB_EVENT, TARGET, 421
	LOCAL:5 *= ((LOCAL:2 * 5) + (LOCAL:3 / 5))
	LOCAL:5 = MAX(LOCAL:5 - LOCAL:5%100, 100)
	BASE:MASTER:体力 -= LOCAL:5
	PRINTFORML %CALLNAME:MASTER%の体力が{LOCAL:5}減少した。
	IF BASE:MASTER:体力 < 0
		BASE:MASTER:体力 = 1
		PRINTFORML %CALLNAME:MASTER%は死兆星が見えた気がした……
		;異常経験
		CALL COMMON_UP_EXP, MASTER, 50, 1, 1
	ELSEIF BASE:MASTER:体力 < 10
		BASE:MASTER:体力 = 10
	ENDIF
	;ストレス軽減
	IF CFLAG:ストレス
		PRINTFORML %CALLNAME:TARGET%のストレスが低下した。
		CFLAG:ストレス -= LOCAL:5
	ENDIF
ELSEIF RESULT == 1
	;毒を盛ったフラグON
	CFLAG:150 |= 256
	CFLAG:MASTER:150 |= 1024
	;このおにちく！
	PRINTFORML %CALLNAME:TARGET%が\@(TALENT:恋慕) ? 思いを込めて # \@作ったチョコは{LOCAL:3}圓の買値が付いた。
	MONEY:1 = LOCAL:3
	CALL SHOW_MONEY_INCREACE
	;--------------------------------------------------
	;弁当(奴隷)で稼いだ最高金額判定処理
	SIF MONEY:1 > MONEY:996
		CALL NEW_HIGH_INCOME_ALL, 996
	SIF MONEY:1 > CFLAG:最高金額_弁当
		CALL NEW_HIGH_INCOME_SLAVE, 93
	CALL TOTAL_INCOME_SLAVE, MONEY:1
	;--------------------------------------------------

	;作成した嫉妬チョコを売り払われた時の口上・地の文の表示
	CALL DISPLAY_KOJO_MESSAGE_SUB_EVENT, TARGET, 422
	CFLAG:嫉妬ポイント += 30
	TFLAG:202 = 0
	LOCAL:5 = (LOCAL:3 / 2 + CFLAG:嫉妬ポイント * 2) * 5

	;妄信
	SIF TALENT:妄信
		TIMES LOCAL:5 , 0.50
	;愛情補正
	IF TALENT:相愛
		TIMES LOCAL:5 , 0.60
	ELSEIF TALENT:親愛
		TIMES LOCAL:5 , 0.75
	ELSEIF TALENT:恋慕
		TIMES LOCAL:5 , 0.90
	ENDIF
	;プライド高い
	SIF TALENT:プライド高い
		TIMES LOCAL:5 , 1.30
	;自制心
	SIF TALENT:自制心
		TIMES LOCAL:5 , 0.90
	;感情乏しい
	SIF TALENT:感情乏しい
		TIMES LOCAL:5 , 0.70
	;悲観的
	IF TALENT:悲観的
		TIMES LOCAL:5 , 1.20
	;楽観的
	ELSEIF TALENT:楽観的
		TIMES LOCAL:5 , 0.80
	ENDIF
	;服従
	SIF TALENT:服従
		TIMES LOCAL:5 , 0.75
	;ヤンデレ補正
	SIF TALENT:嫉妬
		TIMES LOCAL:5 , 1.30
	SIF TALENT:狂気
		TIMES LOCAL:5 , 1.70
	;下2桁は切り捨て
	LOCAL:5 = MAX(LOCAL:5 - (LOCAL:5 % 100), 100)
	IF TALENT:服従 == 0 && TALENT:使い魔 == 0
		IF CFLAG:嫉妬ポイント >= 50 && TALENT:嫉妬 == 0
			TALENT:嫉妬 = 1
			CFLAG:12 |= 4096
			PRINTFORMW ……%CALLNAME:TARGET%の心に嫉妬心が芽生え始めた
		ELSEIF CFLAG:嫉妬ポイント >= 100 && TALENT:狂気 == 0
			TALENT:狂気 = 1
			CFLAG:12 |= 1
			CFLAG:17 |= 2
			PRINTFORMW ……%CALLNAME:TARGET%の嫉妬心は狂気の域に達している
			IF TALENT:理性
				MAXBASE:9 = MAX(MAXBASE:9 / 2, 1)
				SIF BASE:理性 > MAXBASE:9
					BASE:理性 = MAXBASE:9
			ENDIF
		ELSEIF CFLAG:嫉妬ポイント >= 130
			PRINTFORMW %CALLNAME:TARGET%のこちらを見る目がおかしい…
			PRINTFORMW 嫌な予感がする…
			TFLAG:202 = 2
		ENDIF
	ENDIF
	IF LOCAL:5 >= 5000 && LOCAL:5 < 12000 && MARK:97 < 1
		LOCAL:6 = 1
	ELSEIF LOCAL:5 >= 12000 && LOCAL:5 < 30000 && MARK:97 < 2
		LOCAL:6 = 2
	ELSEIF LOCAL:5 >= 30000 && MARK:97 < 3
		LOCAL:6 = 3
	ELSE
		LOCAL:6 = 0
	ENDIF
	IF MARK:97 < LOCAL:6
		;反発刻印上昇
		CALL COMMON_MARK_UP, TARGET, 9, LOCAL:6, 0
		LOCAL:7 = 0
		;感情乏しい、傀儡、精神崩壊、壊造人格の場合は反発刻印による従順ダウンはなし
		IF TALENT:感情乏しい == 0 && TALENT:精神崩壊 == 0 && TALENT:傀儡 == 0 && TALENT:壊造人格 == 0
			IF ABL:従順 > 0 && ABL:従順 <= 2 && LOCAL:6 == 3
				LOCAL:7 = 1
				ABL:従順 = 0
			ELSEIF ABL:従順 == 3 && LOCAL:6 == 3
				LOCAL:7 = 1
				ABL:従順 = 2
			ELSEIF ABL:従順 && ABL:従順 <= 2 && LOCAL:6 == 2
				LOCAL:7 = 1
				ABL:従順 -= 1
			ENDIF
		ENDIF
		IF LOCAL:7 == 1
			PRINTFORML そして従順がLV{ABL:従順}になった
			CALL JUJUN_UP_CHECK
		ENDIF
		;嫉妬チョコレートで反発刻印取得
		CALL DISPLAY_KOJO_MESSAGE_SUB_EVENT, TARGET, 423, LOCAL:6
	ENDIF
	CFLAG:ストレス += LOCAL:5 * 2 / (2 + RAND:3)
	;否定の珠
	CALL COMMON_UP_JUEL, TARGET, 100, LOCAL:5, 1
ELSE
	GOTO INPUT_LOOP
ENDIF

CFLAG:ストレス = LIMIT(CFLAG:ストレス, 0, 999999)

LOCAL:5 = LOCAL:6 + RAND:5
;調理経験
CALL COMMON_UP_EXP, TARGET, 70, LOCAL:5, 1

;条件を満たすと食後の運動イベントに
IF TFLAG:202 == 1 && ABL:Ｖ感覚 > 0 && FLAG:12 & 1024
	CALL LUNCH_EXERCISE
	;親愛、相愛持ちかつ食後のイベント発生確定時はヤンデレポイントが減少
	;さらに初期に嫉妬を持っていないキャラの場合、嫉妬持ちかつ狂気になっていないなら嫉妬心が消える
	IF TALENT:親愛 || TALENT:相愛
		CFLAG:嫉妬ポイント = MAX(CFLAG:嫉妬ポイント - 20, 0)
		IF CFLAG:嫉妬ポイント == 0 && TALENT:嫉妬 && CFLAG:12 & 4096 && TALENT:COUNT:狂気 == 0
			;嫉妬心氷解時の口上・地の文の表示
			CALL DISPLAY_KOJO_MESSAGE_SUB_EVENT, TARGET, 424
			PRINTFORMW %CALLNAME:TARGET%は[嫉妬]を失った
			TALENT:嫉妬 = 0
			CFLAG:12 -= 4096
		ENDIF
	ENDIF
ELSEIF TFLAG:202 == 2
	SIF TIME == 1
		PRINTW 一日が終わった……
	CALL BADEND_9, TARGET
ELSE
	TFLAG:202 = 0
ENDIF

;休憩フラグを立てる
FLAG:0 = 1
BEGIN TURNEND
RETURN 1
